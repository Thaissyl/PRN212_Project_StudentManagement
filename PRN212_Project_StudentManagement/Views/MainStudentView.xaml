<Window
    x:Class="PRN212_Project_StudentManagement.Views.MainStudentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PRN212_Project_StudentManagement.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:PRN212_Project_StudentManagement.ViewModels"
    Title="Student Dashboard"
    Width="1000"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Border
                Grid.Row="0"
                Background="#007BFF"
                CornerRadius="10,10,0,0"
                MouseDown="Border_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding WelcomeMessage}" />

                    <Button
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Click"
                        Content="✕"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White" />
                </Grid>
            </Border>

            <!--  Main Content  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Student Information  -->
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,20"
                        Padding="20"
                        Background="#F8F9FA"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,15"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Student Information" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,5"
                                    FontWeight="Bold"
                                    Text="Name:" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    Text="{Binding CurrentUser.FullName}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,5"
                                    FontWeight="Bold"
                                    Text="Email:" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    Text="{Binding CurrentUser.Email}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,5"
                                    FontWeight="Bold"
                                    Text="Role:" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    Text="{Binding CurrentUser.Role}" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Classes Information  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,20"
                        Padding="20"
                        Background="#F8F9FA"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,15"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="My Classes" />

                            <ItemsControl ItemsSource="{Binding StudentClasses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,10"
                                            Padding="15"
                                            Background="White"
                                            BorderBrush="#E9ECEF"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Class Name  -->
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Margin="0,0,10,5"
                                                    FontWeight="Bold"
                                                    Text="Class:" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,5"
                                                    FontWeight="Bold"
                                                    Foreground="#007BFF"
                                                    Text="{Binding ClassName}" />

                                                <!--  Academic Year  -->
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Margin="0,0,10,5"
                                                    FontWeight="Bold"
                                                    Text="Academic Year:" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,5"
                                                    Text="{Binding AcademicYear}" />

                                                <!--  Teacher  -->
                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Margin="0,0,10,5"
                                                    FontWeight="Bold"
                                                    Text="Teacher:" />
                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,5"
                                                    Foreground="#28A745"
                                                    Text="{Binding TeacherName}" />

                                                <!--  Subject  -->
                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    Margin="0,0,10,5"
                                                    FontWeight="Bold"
                                                    Text="Subject:" />
                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="1"
                                                    Margin="0,0,0,5"
                                                    Foreground="#6F42C1"
                                                    Text="{Binding SubjectName}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  No Classes Message  -->
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                Foreground="#6C757D"
                                Text="No classes enrolled yet."
                                Visibility="{Binding ShowNoClassesMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </Border>

                    <!--  Action Buttons  -->
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <Button
                            Margin="10"
                            Padding="20,10"
                            Background="#28A745"
                            BorderBrush="Transparent"
                            Command="{Binding ViewProfileCommand}"
                            Content="View Profile"
                            Cursor="Hand"
                            FontWeight="Bold"
                            Foreground="White" />

                        <Button
                            Margin="10"
                            Padding="20,10"
                            Background="#DC3545"
                            BorderBrush="Transparent"
                            Command="{Binding LogoutCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Content="Logout"
                            Cursor="Hand"
                            FontWeight="Bold"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
