<Window x:Class="PRN212_Project_StudentManagement.Views.AddClassView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PRN212_Project_StudentManagement.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Add New Class" Width="300" Height="250" WindowStartupLocation="CenterScreen" mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Class Name:" />
            <TextBox Margin="0,5,0,10" Text="{Binding ClassName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Teacher:" />
            <ComboBox Margin="0,5,0,10" ItemsSource="{Binding Teachers}" DisplayMemberPath="User.FullName" SelectedValue="{Binding SelectedTeacherId}" SelectedValuePath="TeacherId" />
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Academic Year:" />
            <TextBox Margin="0,5,0,10" Text="{Binding AcademicYear, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="80" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
