<Window x:Class="PRN212_Project_StudentManagement.Views.AddStudentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PRN212_Project_StudentManagement.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="AddStudentView" Width="800" Height="450" mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Name" />
            <TextBox Text="{Binding NewStudent.FullName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Email" />
            <TextBox Text="{Binding NewStudent.Email, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Enrollment Date" />
            <!--  Corrected from "Date of Birth"  -->
            <DatePicker SelectedDate="{Binding NewStudent.EnrollmentDateTime, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Class" />
            <ComboBox ItemsSource="{Binding ClassNames}" SelectedItem="{Binding NewStudent.ClassName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="4" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="80" Margin="5" Command="{Binding SaveCommand}" Content="Save" />
            <Button Width="80" Margin="5" Command="{Binding CancelCommand}" Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
